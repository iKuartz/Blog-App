
<section> 
  <div>
    <div>
      <img style="width: 150px; height:150px;" src=<%=@post.author.photo%> alt=<%=@post.author.name%> />
    </div>
    <div> 
      <h2><%=@post.author.name %></h2>
      <p><strong>Number of Posts: <%= @post.author.posts_counter || 0 %>      
    </div>
  </div>

    <div>
      <div>
        <h3><%= @post.title %> </h3>
        <p><%= @post.text %> </p>
      </div> 
    
      <%= link_to "BACK", user_posts_path, class: "btn btn-secondary" %>
      <%= link_to "HOME", users_path, class: "btn btn-primary" %> 
  
    <%= render "shared/comments", comments: @post.comments %>     
    
    <%= link_to 'Add Comment', new_comment_path(user_id: @current_user.id, post_id: @post.id)%>   
    <%= link_to 'Like', new_like_path(user_id: @current_user.id, post_id: @post.id),method: :post %>    
    <%= link_to 'Delete', user_post_path(@post, user_id: @current_user.id), data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure you wish to delete your post?"
              } %>
</section>